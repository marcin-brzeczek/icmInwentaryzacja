<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="lollipop"
    android:color="#B3ffffff" >

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle" >
            <corners android:radius="10dp" />

            <solid android:color="#B3ffffff" />
            <!--
                 <gradient
                android:angle="135"
                android:centerColor="@color/grey3"
                android:endColor="#9e9e9e"
                android:startColor="@color/grey2"
                android:type="linear" />
            -->
        </shape>
    </item>
    <item>
        <selector>
            <item>
                <shape android:shape="rectangle" >

                    <!-- <gradient android:startColor="@color/blue700" android:endColor="@color/colorPrimaryDark"/> -->

                    <stroke
                        android:width="0.5dp"
                        android:color="@color/white" />

                    <corners android:radius="10dp" />

                    <gradient
                        android:angle="270"
                        android:endColor="#93906b"
                        android:startColor="#dbd6a0"
                        android:type="linear" />
                </shape>
            </item>
        </selector>
    </item>

</ripple>